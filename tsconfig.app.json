{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["./src/01_shared/*"],
      "@entities/*": ["./src/02_entities/*"],
      "@features/*": ["./src/03_features/*"],
      "@widgets/*": ["./src/04_widgets/*"],
      "@pages/*": ["./src/05_pages/*"],
      "@app/*": ["./src/07_app/*"],
      "@store": ["./src/01_shared/stores/"]
    }
  }
}
